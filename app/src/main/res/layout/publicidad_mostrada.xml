<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:orientation="vertical"
    android:background="@color/bluedark"
    android:padding="20dp"
    android:layout_gravity="center">

<TextView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/txtCerrarPublicidad"
    android:textColor="@color/Blanco"
    android:text="X"
    android:textStyle="bold"
    android:layout_gravity="end"
    android:gravity="center"
    android:background="@drawable/circulobackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="2"
                android:src="@drawable/imgaqui"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/txtTituloPublicidadRandom"
                android:textSize="18sp"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="@color/Blanco"
                android:text="Titulaso"
                android:gravity="center_horizontal|center_vertical"/>


            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/txtDescripcionPublicidadRandom"
                android:scrollbars = "vertical"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="@color/Blanco"
                android:text="Descripcion"
                android:gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btnVerPublicidad"
                android:background="@drawable/btnpublicidadestilo"
                android:textColor="@color/Blanco"
                android:text="Ver"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


</LinearLayout>